{
    "compilerOptions": {
      "target": "ESNext",
      "rootDir": "./src",
      "outDir": "./dist",
      "removeComments": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "importHelpers": true,
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "skipLibCheck": true,
      "strict": true,
      "module": "commonjs",
      "sourceMap": true,
  
    },
    "files": [
      "./src/Bot.ts"
    ],
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }